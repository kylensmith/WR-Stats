<!-- Admin users -->



<div class="container">

	<h1>User List</h1>
<div class="tab-content">
    <div role="tabpanel" class="tab-pane active" id="team">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>User</th>
            <th>Admin?</th>
            <th>Super Admin?</th>
            <th>Last Active</th>
            <th>Joined</th>
             <% if current_user.super_admin && !current_user.admin?%> 

              <th>Change Rights</th>

              <%end%>
          </tr>
        </thead>
        <tbody>
          <% @adm.each do |admin|%>
        
            <tr>
             

              <td><%="#{admin.try(:email)}"%></td>
              <td>
              	<% if admin.admin%>
              	<input type="radio" id="admin_radio" checked disabled>
              	<%else%>
              	<input type="radio" id="admin_radio" disabled>
              	<%end%>

              </td>
              <td>
              	<% if admin.super_admin%>
              	<input type="radio" id="sup_admin_radio" checked disabled>
              	<%else%>
              	<input type="radio" id="sup_admin_radio" disabled>
              	<%end%>
              	
              </td>
              <td>
              	<%= distance_of_time_in_words(admin.try(:last_sign_in_at), Time.now)%>
              	
              </td>

              <td>
              	<%= distance_of_time_in_words(admin.try(:created_at), Time.now)%>
              	
              </td>
              <% if current_user.super_admin && !current_user.admin?%> 

              <td>
              	<%= link_to "edit", edit_admin_user_path(admin)%>
              	
              </td>

              <%end%>
              
              
             
              

              
             
            </tr>
          <%end%>
        </tbody>
      </table>
    </div>
</div>

