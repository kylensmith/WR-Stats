<div class="container">
  <h1>
    <%=link_to @team.name, school_path(@team)%> - <%= @season.year%>
  </h1>
  <% if @ds%>
  <div class="row" style="">
    <div class="col-sm-3">
      <h5>
        <% if @ds.coach%>
        Head Coach: <%= link_to "#{@ds.try(:coach).try(:fname)} #{@ds.try(:coach).try(:lname)}", coach_path(@ds.coach)%>
        <%end%>
      </h5>
    </div>
    <div class="col-sm-3">
      <h5>
        <%="Classification: #{@ds.try(:division).try(:event)}"%>
      </h5>
    </div>

    <div class="col-sm-3">
      <h5>
        <%="Record: #{@ds.wins}-#{@ds.losses}-#{@ds.ties}"%>
      </h5>
    </div>
    <%end%>





    <!-- tab panes -->

    <div class="tab-content">
      <div role="tabpanel" class="tab-pane active" id="team">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Date</th>
              <th>Opponent</th>
              <th>Result</th>
              <th>Record</th>
            </tr>
          </thead>
          <tbody>
            <%winner = 0%>
            <%loser = 0%>
            <%draw = 0%>
            <% @duals.each do |dual|%>
            <%if @team == dual.w%>
            <% winner = winner + 1%>
            <%elsif @team == dual.l%>
            <% loser = loser + 1%>
            <%elsif dual.t == true%>
            <% draw = draw + 1%>
            <%end%>
            <tr>
              <td><%=dual.try(:date).try(:strftime, "%a %b %d, %Y")%></td>
              
              <td>
                <% if dual.opp(@team)%>
                <%= link_to "#{dual.location(@team)} #{dual.opp(@team).name}", school_season_path(dual.opp(@team), dual.season_id)  %>
                <%else%>
                <p>Unknown</p>
                <%end%>
              </td>


              <td><%="#{dual.result(@team)} #{dual.try(:tie_breaker) ? "TB" : ""}"%></td>
              <td><%= "#{winner}-#{loser}-#{draw}"%></td>
              

            </tr>
            <%end%>
          </tbody>
        </table>
      </div>
    </div>
  </div>




  <div class="season_form">
    <%= simple_form_for @new_school, :url =>  {:controller => 'admin/duals', :action => "mass_create" }, :html => { :class => 'form-inline' } do |c| %>

    <%= c.fields_for :duals do |f| %>



         <%= render "new_dual_form", :f => f %>
        <%= render "new_dual_form", :f => f %>
        <%= render "new_dual_form", :f => f %>


      

      <p><%= c.submit "Submit" %></p>
    <%end%>
    <% end %>
  </div>
</div>






